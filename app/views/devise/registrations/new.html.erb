<body class="signup-cover">
  <div class="container-fluid">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="wrapper">
      <div class="login">
        <p class="title text-center">Sign Up</p>
          <%= f.email_field :email, autofocus: true, placeholder: "EMAIL" %>
          <br>
          <% if @minimum_password_length %>
          <p class="text-center"><em>(<%= @minimum_password_length %> characters minimum)</em></p>
          <% end %>
          <%= f.password_field :password, autocomplete: "off", placeholder: "PASSWORD" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "CONFIRM PASSWORD" %>
          <%= f.submit "Sign up", class: "state" %>
          <%= render "devise/shared/links" %>
      </div>
    </div>
    <% end %>
  </div>
</body>
