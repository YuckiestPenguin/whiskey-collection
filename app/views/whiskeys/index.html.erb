<p id="notice"><%= notice %></p>

<h1>Whiskeys</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Abv</th>
      <th>Price</th>
      <th>Color</th>
      <th>Nose</th>
      <th>Taste</th>
      <th>Finish</th>
      <th>Overall</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @whiskeys.each do |whiskey| %>
      <tr>
        <td><%= whiskey.title %></td>
        <td><%= whiskey.abv %></td>
        <td><%= whiskey.price %></td>
        <td><%= whiskey.color %></td>
        <td><%= whiskey.nose %></td>
        <td><%= whiskey.taste %></td>
        <td><%= whiskey.finish %></td>
        <td><%= whiskey.overall %></td>
        <td><%= whiskey.score %></td>
        <td><%= link_to 'Show', whiskey %></td>
        <td><%= link_to 'Edit', edit_whiskey_path(whiskey) %></td>
        <td><%= link_to 'Destroy', whiskey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Whiskey', new_whiskey_path %>
