<div class="container">
  <div class="row">
      <div class="col-md-6 text-center">
          <%= image_tag @whiskey.image.url(:medium), class: "center-block" %>
          <h2 class="text-center"><%= @whiskey.title %></h2>
          <h4><strong>ABV: </strong><%= @whiskey.abv %></h4>
          <h4><strong>Price: </strong><%= @whiskey.price %></h4>
      </div>
      <div class="col-md-6 text-center">
          <h1 id="score" class="text-center"><%= @whiskey.score %></h1>
          <h2>Color:</h2>
          <h4><%= @whiskey.color %></h4>

          <h2>Nose:</h2>
          <h4><%= @whiskey.nose %></h4>

          <h2>Taste:</h2>
          <h4><%= @whiskey.taste %></h4>

          <h2>Finish:</h2>
          <h4><%= @whiskey.finish %></h4>

          <h2>Overall:</h2>
          <h4><%= @whiskey.overall %></h4>

      </div>
    </div>

</div>


<%= link_to 'Edit', edit_whiskey_path(@whiskey) %>
