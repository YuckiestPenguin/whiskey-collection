<div class="container">
  <div class="row">
      <div class="col-md-6 text-center">
          <%= image_tag @whiskey.image.url(:medium), class: "center-block" %>
          <h2 class="text-center"><%= @whiskey.title %></h2>
          <h4><strong>ABV: </strong><%= @whiskey.abv %></h4>
          <h4><strong>Price: </strong><%= @whiskey.price %></h4>
          <h4><strong>Own It: </strong><%= @whiskey.own %></h4>
      </div>
      <div class="col-md-6 text-center">
          <h1 id="score" class="text-center"><%= @whiskey.score %></h1>
          <h2>Color:</h2>
          <h4><%= @whiskey.color %></h4>

          <h2>Nose:</h2>
          <h4><%= @whiskey.nose %></h4>

          <h2>Taste:</h2>
          <h4><%= @whiskey.taste %></h4>

          <h2>Finish:</h2>
          <h4><%= @whiskey.finish %></h4>

      </div>
    </div>
    <hr>
    <div class="row text-center">
        <div class="btn-group" role="group" aria-label="Basic example">
          <%= link_to 'Back', whiskeys_path, type: "button", class: "btn btn-lg btn-success" %>
          <%= link_to 'Edit', edit_whiskey_path(@whiskey), type: "button", class: "btn btn-lg btn-warning" %>
          <%= link_to "Delete", whiskey_path(@whiskey), method: :delete, style: "button", class: "btn btn-lg btn-danger", data: {confirm: "You sure about that?"} %>
        </div>
    </div>

</div>
